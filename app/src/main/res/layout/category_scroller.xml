<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@color/colorPrimary"
            android:elevation="12dp">

            <TextView
                android:id="@+id/subcatagorytitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:textSize="22sp"
                android:text="Catagory"
                android:textColor="@color/white"/>


            <Button
                android:id="@+id/menuBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="14dp"
                android:background="@drawable/menu" />

            <Button
                android:id="@+id/searchBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/magnifyingglass"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="14dp"
                />

        </RelativeLayout>

        <!--One Pad-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/graphiccards">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:src="@drawable/gpu"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginTop="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:src="@drawable/category_card"
                android:padding="6dp"
                android:alpha="0.5"/>

            <ImageView
                android:src="@drawable/frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Graphic Cards"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"/>
        </FrameLayout>

        <!--One Pad-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/peripherals">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:src="@drawable/gpu"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginTop="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:src="@drawable/category_card"
                android:padding="6dp"
                android:alpha="0.5"/>

            <ImageView
                android:src="@drawable/frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peripherals"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"/>
        </FrameLayout>

    </LinearLayout>

</ScrollView>